def dispfail():
  query11="select id from marks where math <33 or sci <33 or sst <33 or lang1 <33"
  curs=conn.cursor()
  curs.execute(query11)
  result=curs.fetchall()
  for i in result:
    print(i)
def listfailstudents():
  dispfail()
  conn.commit()
  
