def insert2():
  curs=conn.cursor()
  psql1="""INSERT INTO MARKS(id,exam_name,math,sci,sst,lang1) values(%s,%s,%s,%s,%s,%s) """
  record=(module2entry2.get(),module2entry3.get(),module2entry4.get(),module2entry5.get(),module2entry6.get())
  curs.execute(psql1,record)
